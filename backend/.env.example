# ============ DATABASE ============
# Railway provides this automatically when you add PostgreSQL plugin
DATABASE_URL=postgresql+asyncpg://egglogu:egglogu@postgres:5432/egglogu

# Railway provides this automatically when you add Redis plugin
REDIS_URL=redis://redis:6379/0

# ============ JWT AUTH ============
# IMPORTANT: Generate a strong 64-char random key for production
# python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============ STRIPE BILLING ============
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
# Get from Stripe Dashboard > Developers > Webhooks > endpoint > Signing secret
STRIPE_WEBHOOK_SECRET=whsec_...

# Monthly prices — create 4 products in Stripe Dashboard, copy price IDs
STRIPE_PRICE_HOBBY=price_...          # $9/mo
STRIPE_PRICE_STARTER=price_...        # $19/mo
STRIPE_PRICE_PRO=price_...            # $49/mo
STRIPE_PRICE_ENTERPRISE=price_...     # $99/mo

# Annual prices — same products, add yearly price (2 months free)
STRIPE_PRICE_HOBBY_ANNUAL=price_...       # $90/yr ($7.50/mo)
STRIPE_PRICE_STARTER_ANNUAL=price_...     # $190/yr ($15.83/mo)
STRIPE_PRICE_PRO_ANNUAL=price_...         # $490/yr ($40.83/mo)
STRIPE_PRICE_ENTERPRISE_ANNUAL=price_...  # $990/yr ($82.50/mo)

# ============ EMAIL (Resend) ============
# Get from https://resend.com/api-keys
RESEND_API_KEY=re_...
EMAIL_FROM_DOMAIN=egglogu.com

# ============ FRONTEND ============
# URL where the frontend SPA is served (for CORS + Stripe redirect URLs)
FRONTEND_URL=http://localhost:8080

# ============ GOOGLE OAUTH ============
# Get from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=

# ============ CLOUDFLARE R2 OFF-SITE BACKUP ============
# Create R2 bucket at https://dash.cloudflare.com → R2 → Create bucket
# Create API token at R2 → Manage R2 API Tokens → Create API token
R2_ENDPOINT_URL=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=egglogu-backups
R2_RETENTION_DAYS=30

# ============ OPTIONAL ============
OWM_API_KEY=
MQTT_BROKER_URL=
